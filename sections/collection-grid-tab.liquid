{% schema %}
{
  "name": "Tabbed Collection",
  "settings": [],
  "blocks": [
    {
      "type": "collection_tab",
      "name": "Collection Tab",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Tab Title"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
       {
          "type": "richtext",
          "id": "cstm_tab_title",
          "label": "Custom Title"
        },
      ]
    }
  ],
  "max_blocks": 5,
  "presets": [{
    "name": "Tabbed Collection",
    "category": "Custom"
  }]
}
{% endschema %}

<style>
.tab-buttons {
  display: flex;
  gap: 12px;
  justify-content: center;
  margin-bottom: 24px;
  flex-wrap: wrap;
}
.tab-button {
  padding: 10px 18px;
  border-radius: 24px;
  border: none;
  cursor: pointer;
  background-color: #eee;
  font-weight: 600;
}
.tab-button.active {
  background-color: #00BCD4;
  color: white;
}
.tab-pane {
  display: none;
}
.tab-pane.active {
  display: block;
}
.scroll-list {
  display: flex;
  overflow-x: auto;
  gap: 16px;
  padding: 0 12px;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
  list-style: none;
  margin: 0;
}
.scroll-list::-webkit-scrollbar {
  display: none;
}
.scroll-list {
  scrollbar-width: none;
}
.scroll-item {
  flex: 0 0 auto;
  scroll-snap-align: start;
  min-width: 280px;
  max-width: 320px;
}
</style>

<div class="tab-collection-wrapper page-width">
  <div class="tab-buttons">
    {% for block in section.blocks %}
      <button class="tab-button {% if forloop.first %}active{% endif %}" data-tab="tab-{{ forloop.index0 }}">
        {{ block.settings.tab_title }}
      </button>
    {% endfor %}
  </div>

  {% for block in section.blocks %}
    <div class="tab-pane {% if forloop.first %}active{% endif %}" id="tab-{{ forloop.index0 }}">
     {{ block.settings.cstm_tab_title }}
      <ul class="scroll-list">
        {% for product in block.settings.collection.products limit: 20 %}
          <li class="scroll-item">
            {% render 'card-product', card_product: product %}
          </li>
        {% endfor %}
      </ul>
    </div>
  {% endfor %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
  const buttons = document.querySelectorAll('.tab-button');
  const panes = document.querySelectorAll('.tab-pane');

  buttons.forEach((btn, i) => {
    btn.addEventListener('click', () => {
      buttons.forEach(b => b.classList.remove('active'));
      panes.forEach(p => p.classList.remove('active'));

      btn.classList.add('active');
      panes[i].classList.add('active');
    });
  });
});
</script>
