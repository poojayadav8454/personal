<!-- ==================Our Store Section ============================== -->
  {%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  {%- endstyle -%}
<div class="our_store">
<div class="our_store_container section-{{ section.id }}-padding page-width">
  {% if section.settings.store_heading !=blank %}
   <h2 class="our_store_haeding">{{ section.settings.store_heading }}</h2>
  {% endif %}
  <div class="store_block_container">
  {% for block in section.blocks %}
  <div class="store_image_text">
    {% if block.settings.store_images !=blank %}
      <a href="{{ block.settings.city_name_url }}">
    <img src="{{ block.settings.store_images |img_url:'' }}">
      </a>
    {% endif %}
    {% if block.settings.city_name !=blank %}
    <h3>{{ block.settings.city_name }}</h3>
    {% endif %}
     {% if block.settings.city_address !=blank %}
    <p>{{ block.settings.city_address }}</p>
    {% endif %}
  </div>
  {% endfor %}
</div>
</div>
</div>

{% schema %}
{
  "name": "Store Section",
  "settings": [
    {
      "type": "text",
      "id": "store_heading",
      "label": "Enter Store Heading"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "Store_Section",
      "name": "Store_Section",
      "settings": [
        {
          "type": "image_picker",
          "id": "store_images",
          "label": "Choose your image"
        },
        {
          "type": "url",
          "id": "city_name_url",
          "label": "Enter City Name Loction"
        },
        {
          "type": "text",
          "id": "city_name",
          "label": "Enter City Name"
        },
        {
          "type": "richtext",
          "id": "city_address",
          "label": "Enter Store City Address"
        }
       
      ]
    }
  ],
  "presets": [
    {
      "name": "Store Section"
    }
  ]
}
{% endschema %}
<style>
  .our_store
  {
    background-color:#eae8e2;
  }
  h2.our_store_haeding {
    text-align: center;
    text-transform: capitalize;
    font-weight: 600;
    margin-bottom: 50px;
}
  .store_block_container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    text-align:center;
    gap:2%;
}
  .store_image_text {
    width: 23%;
    margin-bottom:80px;
}
  .store_image_text h3, .store_image_text h3 p {
    text-align: center;
}
  .store_image_text img {
    width: 100%;
    max-width: 30%;
}
  .store_image_text h3 {
    margin-bottom: 0;
    font-weight: 600;
}
  .store_image_text p {
    margin: 0;
    font-size: 14px;
    line-height:1.6;
}
  @media(max-width:1024px)
  {
     .store_image_text {
    width: 31%;

  }
      @media(max-width:1024px)
  {
     .store_image_text {
    width: 48%;
  }

    .store_image_text img {
    max-width: 60%;
}
</style>


